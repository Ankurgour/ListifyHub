    <div class="box">
        <% todoItems.forEach((item)=>{ %>
            <form action="/delete" method="POST">
                <div class="Items">
                    <input onChange=this.form.submit() type="checkbox" name="checkbox" value="<%=item._id%>">
                    <p ><%=item.name%></p>
                </div>
                <input type="hidden" name="listName" value="<%= title %>">

            </form>

        <%})%>
        <form class = "Items" action="/" method="POST">
            <input type="text" name="todo" placeholder="Add Todo" autocomplete="off" required>
            <button type="submit" name="list" value="<%=title%>">+</button>

        </form>

    </div>



